{
  "name": "safe-sift",
  "version": "1.0.10",
  "description": "Type-safe wrapper for sift.js providing compile-time query validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:tests": "tsc -p tsconfig.tests.json",
    "build:examples": "rm -rf examples/compiled && tsc -p tsconfig.examples.json",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "release": "dotenv -e .env -- release-it",
    "release:patch": "dotenv -e .env -- release-it patch",
    "release:minor": "dotenv -e .env -- release-it minor",
    "release:major": "dotenv -e .env -- release-it major",
    "release:dry": "dotenv -e .env -- release-it --dry-run",
    "release:ci": "dotenv -e .env -- release-it --ci",
    "release:ci:patch": "dotenv -e .env -- release-it patch --ci",
    "release:ci:minor": "dotenv -e .env -- release-it minor --ci",
    "release:ci:major": "dotenv -e .env -- release-it major --ci",
    "bench:getters": "npx tsx bench/bench-getters.ts",
    "bench:large-query": "tsx bench/bench-large-query.ts",
    "bench:mem": "npx --node-arg=--expose-gc --node-arg=--max-old-space-size=4096 tsx bench/bench-memory.ts"
  },
  "keywords": [
    "sift",
    "mongodb",
    "query",
    "typescript",
    "type-safe",
    "filter"
  ],
  "author": "tupe12334",
  "license": "MIT",
  "dependencies": {
    "sift": "^17.1.3"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.49.0",
    "eslint-config-agent": "^1.0.13",
    "release-it": "^19.0.4",
    "tsx": "^4.20.5",
    "type-fest": "^4.41.0",
    "typescript": "^5.2.2",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tupe12334/safe-sift"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
